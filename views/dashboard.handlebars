<div class="flex justify-center items-center h-[90vh] min-h-[30vh]">
  <div class="flex flex-col justify-start items-center bg-gradient-to-tr to-cyan-700 from-cyan-900 p-10 rounded-md gap-5 w-1/3">

    <h2 class="text-5xl text-white font-black mb-5 text-center">Welcome, {{#if name}}{{name}}{{else}}Guest{{/if}}!</h1>
      {{#if logged_in}}
        <button id="loggedin-game-button" class="to-signup text-lg font-medium text-orange-100 hover:text-white p-4">Join game 1</button>
      {{else}}
        <input id="guest-name" class="rounded-md px-3 py-1 w-1/2" type="text" placeholder="Screen Name">
        <button id="guest-game-button" class="to-signup text-lg font-medium text-orange-100 hover:text-white p-4">Join game 1</button>

      {{/if}}
  </div>
</div>
<script src="./js/dashboard.js" type="module"></script>
